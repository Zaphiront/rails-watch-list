
  <div class ="container align-items-center">
      <h1> LIST OF ALL MOVIES </h1>
    <div class="d-flex p-2 bd-highlight">
      <% @lists.each do |list| %>
          <% if list.photo.attached? %>
            <div class="border-radius-10 shadow p-5 m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <% else %>
            <div class="border-radius-10 shadow p-5 m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag("usgcdis4a7obcjamkjdz", height: 300, crop: :fill) %>')">
          <% end %>
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    </div>
    <h2><%= link_to "New List", new_list_path  %></h2>


    <%= cl_image_tag "usgcdis4a7obcjamkjdz", height: 300, crop: :fill %>
  </div>
